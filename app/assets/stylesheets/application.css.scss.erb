@import "bootstrap";
@import "toast";

.login-screen {
  background: #666 image-url("bg-home-splash.jpg") center center;
  color: #fff;
  width: 100%;
  background-size: cover;
}

.v-center {
    display:table !important;
    height:300px;
}

.content {
    display:table-cell;
    vertical-align:middle;
    text-align:center;
}

.navbar img { margin-top: -10px; height: 40px; }
.actions {
  font-size: 30px;
  margin-top: -60px;
  float: right;
  a { padding: 10px; i { padding: 10px; }}
 }

 .navbar-nav > li > a { padding-top: 0px; padding-bottom: 0px; }

 .navbar-text {
  .glyphicon {
    font-size: 20px;
    &:hover { color: white; }
  }
 }

 div.user {
  width:35%;
  float:left;
  img {
    margin-right: 20px;
    border-radius: 45px;
  }
 }

 div.info {
  width:65%;
  float:left;
 }

.page-panel { padding: 20px; }
