@import "bootstrap";
@import "toast";

html, body {
  height: 100%;
  background: #fff image-url("background.png") center center;
}

.login-screen {
  background: #000100 image-url("background.png") center center;
  color: #fff;
  width: 100%;
  background-size: cover;
}

.login-screen-container {
 background: rgba(0, 1, 0, 0.55);
}

.v-center {
    display:table !important;
    height:300px;
}

.content {
    display:table-cell;
    vertical-align:middle;
    text-align:center;
}

.navbar img { margin-top: -10px; height: 40px; }
.actions {
  font-size: 30px;
  margin-top: -60px;
  float: right;
  a { padding: 10px; i { padding: 10px; }}
 }

 .navbar-nav > li > a { padding-top: 0px; padding-bottom: 0px; }

 .navbar-text {
  .glyphicon {
    font-size: 20px;
    &:hover { color: white; }
  }
 }

 div.user {
  .image {
    text-align:center;
    img {
      margin-right: 20px;
      border-radius: 45px;
      margin-top: 10px;
    }
  }
  .name {
    h2 {
      line-height: 60px;
    }
  }
 }

.page-panel > .panel-header { padding: 20px; }
.page-panel > .nav-tabs { padding: 0 20px; }

.list-group-item {
  border: none;
  border-top: 1px solid #dddddd;
  padding: 20px;
}

.list-group-item:first-child {
  border: none;
}

.tab-container { padding: 20px; }

.graph { overflow: scroll; }
